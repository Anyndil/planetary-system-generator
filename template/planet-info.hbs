<h5>{{name}}</h5>
<div class="row">
    <div class="col s7">
        <div class="row"><div class="col s4 bold">Class:</div><div class="col s6 class">{{#if className}}{{className}}, {{/if}}{{classification}}</div></div>
        <div class="row"><div class="col s4 bold">Age:</div><div class="col s6 age">{{formatNumber age}} Byr</div></div>
        <div class="row"><div class="col s4 bold">Diameter: </div><div class="col s6 diameter">{{formatNumber diameter}} km</div></div>
        <div class="row"><div class="col s4 bold">Planetary Radius: </div><div class="col s6 planetaryRadius">{{formatNumber planetaryRadius}} R<sub>⊕</sub></div></div>
        <div class="row"><div class="col s4 bold">Composition:</div><div class="col s6 density">{{density.name}}</div></div>
        <div class="row"><div class="col s4 bold">Mass:</div><div class="col s6 mass">{{formatNumber mass}} M<sub>⊕</sub></div></div>
        <div class="row"><div class="col s4 bold">Distance:</div><div class="col s6 distance">{{formatNumber distance}} au</div></div>
        <div class="row"><div class="col s4 bold">Gravity:</div><div class="col s6 gravity">{{formatNumber gravity}} g</div></div>
        <div class="row"><div class="col s4 bold">Orbit:</div><div class="col s6 orbit">{{orbit.type}}</div></div>
        <div class="row"><div class="col s4 bold">Inclination:</div><div class="col s6 inclination">{{inclination.type}}{{#if inclination.value}}, {{inclination.value}}&deg;{{/if}}</div></div>
        <div class="row"><div class="col s4 bold">Orbital Period:</div><div class="col s6 star-mass">{{formatNumber orbitalPeriod}} year(s)</div></div>
        <div class="row"><div class="col s4 bold">Axial Tilt:</div><div class="col s6">{{axialTilt.name}}, {{axialTilt.value}}&deg;</div></div>
        <div class="row"><div class="col s4 bold">Day Length:</div><div class="col s6">{{dayLength}} hours</div></div>
        <div class="row"><div class="col s4 bold">Atmosphere:</div><div class="col s6 atmosphere">{{atmosphere.name}}, {{atmosphere.density}} D<sub>⊕</sub></div></div>
        {{#each atmosphericComposition.components}}
        <div class="row"><div class="col s4 bold"></div><div class="col s3">{{name}}</div><div class="col s2">{{value}}%</div></div>
        {{/each}}
        <div class="row"><div class="col s4 bold">Hydrosphere:</div><div class="col s6">{{hydrosphere.name}}</div></div>
        <div class="row"><div class="col s4 bold">Weather:</div><div class="col s6">{{weather}}</div></div>
        <div class="row"><div class="col s4 bold">Temperature:</div><div class="col s6">{{#if temperature.name}}{{temperature.name}}, {{/if}}{{formatNumber temperature.celsius}}&deg;C / {{formatNumber temperature.fahrenheit}}&deg;F</div></div>
        <div class="row"><div class="col s4 bold">Tectonic Activity:</div><div class="col s6">{{tectonicActivity}}</div></div>
        <div class="row"><div class="col s4 bold">Life:</div><div class="col s6">{{life.name}}</div></div>
    </div>
    <div class="col s5">
        <div class="right image-frame starfield-bg"><img class="right responsive-img" src="{{image}}"></div>
    </div>
</div>
<!-- Satellites -->
{{#if satellites}}
<div class="row no-margin"><div class="col s2 bold">Satellites:</div></div>
<div class="row no-margin"><div class="col s11 satellites">
    <table class="highlight">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Orbital Distance</th>
                <th>Mass</th>
                <th>Composition</th>
                <th>Gravity</th>
            </tr>
        </thead>
        <tbody>
            {{#each satellites}}
            <tr>
                <input type="hidden" name="parentType" value="planet" />
                <input type="hidden" name="baseType" value="{{baseType}}" />
                <input type="hidden" name="baseId" value="{{baseId}}" />
                <input type="hidden" name="parentId" value="{{parentId}}" />
                <input type="hidden" name="moonId" value="{{@index}}" />
                <td>{{name}}</td>
                <td>{{#if className}}{{className}}, {{/if}}{{classification}}</td>
                <td>{{distance.name}}, {{distance.value}} R<sub>⊕</sub>, {{formatNumber distance.valueKm}} km</td>
                <td>{{formatNumber mass}} M<sub>⊕</sub></td>
                <td>{{density.name}}</td>
                <td>{{formatNumber gravity}} g</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div></div>
{{/if}}
<div class="row no-margin info-container"><div class="col s2 bold">Info:</div></div>
<div class="row no-margin"><div class="col s11 star-info">{{{info}}}</div></div>
