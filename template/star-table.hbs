<table class="highlight">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Type</th>
            <th>Surface Temperature</th>
            <th>Luminosity</th>
            <th>Mass</th>
            <th>Radius</th>
        </tr>
    </thead>
    <tbody>
        {{#each stars}}
        <tr>
            <input type="hidden" name="id" value="{{@index}}" />
            <td>{{name}}</td>
            <td>{{class.name}}</td>
            <td>{{typeInfo.lc_class}}: {{typeInfo.lc_desc}}</td>
            <td>{{formatNumber surfaceTemperature}} K</td>
            <td>{{formatNumber luminosity}} L<sub>⊙</sub></td>
            <td>{{formatNumber mass}} M<sub>⊙</sub></td>
            <td>{{formatNumber radius}} R<sub>⊙</sub></td>
        </tr>
        {{/each}}
    </tbody>
</table>
